{
    "name": "parameter-maker",
    "displayName": "Parameter Maker",
    "description": "Convert Selected Text to Parameters",
    "version": "0.0.2",
    "publisher": "boukichi",
    "engines": {
        "vscode": "^1.18.0"
    },
    "license": "MIT",
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:parameter-maker.convertParameter",
        "onCommand:parameter-maker.convertParameterWithInput",
        "onCommand:parameter-maker.selectedMultilineToParameter",
        "onCommand:parameter-maker.selectedTabToParameter",
        "onCommand:parameter-maker.selectedMultilineToParameterEnclose",
        "onCommand:parameter-maker.selectedTabToParameterEnclose"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "parameter-maker configuration",
                "properties": {
                    "parameter-maker.defaultSeperator": {
                        "type": "string",
                        "default": "\n",
                        "title": "default seperator"
                    },
                    "parameter-maker.defaultEnclose": {
                        "type": "string",
                        "default": "\"",
                        "title": "default enclose"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "parameter-maker.convertParameter",
                "title": "Parameter: Convert Selected Text to Parameters",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.convertParameterWithInput",
                "title": "Parameter: Convert Selected Text to Parameters With Input",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.selectedMultilineToParameter",
                "title": "Parameter: Convert Selected Multiline Text to Parameters",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.selectedTabToParameter",
                "title": "Parameter: Convert Selected Tab Text to Parameters",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.selectedMultilineToParameterEnclose",
                "title": "Parameter: Convert Selected Multiline Text to Parameters With Input",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.selectedTabToParameterEnclose",
                "title": "Parameter: Convert Selected Tab Text to Parameters With Input",
                "category": "Parameter"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "parameter-maker.convertParameter",
                    "when": "editorHasSelection"
                },
                {
                    "command": "parameter-maker.convertParameterWithInput",
                    "when": "editorHasSelection"
                },
                {
                    "command": "parameter-maker.selectedMultilineToParameter",
                    "when": "editorHasSelection"
                },
                {
                    "command": "parameter-maker.selectedTabToParameter",
                    "when": "editorHasSelection"
                },
                {
                    "command": "parameter-maker.selectedMultilineToParameterEnclose",
                    "when": "editorHasSelection"
                },
                {
                    "command": "parameter-maker.selectedTabToParameterEnclose",
                    "when": "editorHasSelection"
                }
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/BouKiCHi/parameter-maker.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.2",
        "typescript": "^3.1.6",
        "vscode": "^1.1.21"
    }
}
