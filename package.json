{
    "name": "parameter-maker",
    "displayName": "Parameter Maker",
    "description": "Convert Selected Text to Parameters",
    "version": "0.0.1",
    "publisher": "boukichi",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:extension.convertParameter"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.convertParameter",
                "title": "Parameter: Convert Selected Text to Parameters",
                "category": "Parameter"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.convertParameter",
                    "when": "editorHasSelection"
                }
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/BouKiCHi/parameter-maker.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
