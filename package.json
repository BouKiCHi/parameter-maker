{
    "name": "parameter-maker",
    "displayName": "Parameter Maker",
    "description": "Convert Text to Parameters",
    "version": "0.1.4",
    "publisher": "boukichi",
    "engines": {
        "vscode": "^1.18.0"
    },
    "license": "MIT",
    "categories": [
        "Formatters"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/BouKiCHi/vscode-parameter-maker.git"
    },
    "activationEvents": [
        "onCommand:parameter-maker.AppendTextToEndOfSelections",
        "onCommand:parameter-maker.SurroundSelectionWithText",
        "onCommand:parameter-maker.SelectTextByLine",
        "onCommand:parameter-maker.MakeSelectionsFromText",
        "onCommand:parameter-maker.MakeSelectionsWithRegexp",
        "onCommand:parameter-maker.JoinNLinesAtALine",
        "onCommand:parameter-maker.CopyNTimes",
        "onCommand:parameter-maker.FilterSelectionByIndexInLine"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "parameter-maker.AppendTextToEndOfSelections",
                "title": "%parameter-maker.AppendTextToEndOfSelections.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.SurroundSelectionWithText",
                "title": "%parameter-maker.SurroundSelectionWithText.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.SelectTextByLine",
                "title": "%parameter-maker.SelectTextByLine.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.MakeSelectionsFromText",
                "title": "%parameter-maker.MakeSelectionsFromText.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.MakeSelectionsWithRegexp",
                "title": "%parameter-maker.MakeSelectionsWithRegexp.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.JoinNLinesAtALine",
                "title": "%parameter-maker.JoinNLinesAtALine.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.CopyNTimes",
                "title": "%parameter-maker.CopyNTimes.title%",
                "category": "Parameter"
            },
            {
                "command": "parameter-maker.FilterSelectionByIndexInLine",
                "title": "%parameter-maker.FilterSelectionByIndexInLine.title%",
                "category": "Parameter"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "parameter-maker.CopyNTimes",
                    "when": "editorHasSelection"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.13.2",
        "typescript": "^3.8.3",
        "vscode": "^1.1.37"
    }
}
